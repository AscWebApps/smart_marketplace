<%if notice%>
  <aside id="notice"><%= notice%></aside>
<%end%>
<h1> Asc Catalog</h1>
<ul class="catalog">
  <% cache @products do%>
    <% @products.each do |product| %>
      <%cache product do%>
      <li>
        <%= image_tag(product.cover.variant(resize: "150x150"))%>
        <h2><%= product.title%></h2>
        <p>
          <%= sanitize(product.description)%>
        </p>
        <div class="price">
        <!--<#%= sprintf("â‚¬%0.02f", product.price) %>-->
        <%= number_to_currency(product.price) %>      
        </div>
      </li>
    <%end%>
  <%end%>
<%end%>
</ul>
